<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        
          <% if(user) { %> 
            <!-- the <% %> tells ejs this is javascript -->
            <!-- if username was added, it will show the username,  if the username is falsy, it will send out a form -->
            
            <p>Logged in as: <%=user.email%></p>
            <form method="POST" action="/logout">
            <button type="submit">Log Out</button>
            </form>
           
          <% } else { %>
        <form method="POST" action="/login">
          <label>Email:</label>
          <input name="email" type="email"><br>
          <label>Password:</label>
          <input name="password" type="password">
          <button type="submit">Login</button>
        </form>
        
          <% } %>
    
      </div>
    </div>
  </nav>
</header>